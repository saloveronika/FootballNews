<p id="notice"><%= notice %></p>

<h1> <%= gravatar_for @user %> </h1>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Password:</b>
  <%= @user.hashed_password %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Status:</b>
  <% if @user.admin? %>
		<b> Admin </b>
	<% else %>
		<b> User </b>
	<% end %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
